<h2>Registro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart => true}) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :username %>
  <%= f.text_field :username, :autofocus => true %></div>

  <div><%= f.label "Nombre completo" %>
  <%= f.text_field :fullname, :autofocus => true %></div>

  <div><%= f.label "Correo Electrónico" %>
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label "Contraseña" %>
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div><%= f.label "Confirmacion de Contraseña" %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

  <div><%= f.label :avatar %>
    <%= f.file_field :avatar %></div>

    <%= f.hidden_field :avatar_cache %>

  <div><%= f.submit "Registrar" %></div>
<% end %>

<%= render "devise/shared/links" %>
